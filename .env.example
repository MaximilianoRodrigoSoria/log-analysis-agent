# LLM provider configuration
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-flash

# Cache
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60

# Report generation and datasets
REPORT_FORMAT=excel
OUT_DIR=./out
DATASETS_DIR=./datasets
REPORT_DOWNLOAD_MAX_FILES=10

# Runtime
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=120
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
